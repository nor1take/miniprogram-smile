.userInfoContainer{
  width: 100%;
  height: 532rpx;

  position: fixed;
  top: 0;

  background: linear-gradient(to top,white, transparent);

  display: flex;
  align-items: center;
}
.userInfo{
  width: 100%;
  height: 200rpx;

  margin: 32rpx;
  margin-top: 200rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(10px);
  box-shadow:0 0 30rpx #7B7B7B;

  display: flex;
  align-items: center;

  padding: 16rpx;

  font-size: 34rpx;
  font-weight: 500;
}

.box{
  border-top: 1rpx solid #E7E7E7;
  border-radius: 20rpx;
  
  display: flex;
  align-items: center;
  padding: 16rpx;
  justify-content: center;
  font-size: 34rpx;
}
.red-point{
  width: 30rpx;
  height: 30rpx;

  margin-left: 10rpx;

  border-radius: 30rpx;
  background-color: #FA5151;

  display: flex;
  align-items: center;
  justify-content: center;

  color:white;
  font-size: 20rpx;
  font-weight: bolder;
}
.buttonBox{
  border-radius: 20rpx;
  width: 100%;
}

