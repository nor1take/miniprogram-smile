page {
  background-color: white;
}

.messageBackground {
  padding: 32rpx;
  border-bottom: 1rpx solid #DDDDDD;
}

.showTime {
  /* border: 1rpx solid black; */
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  color: #acacac;
}

.top {
  /* border: 1rpx solid black; */
  height: fit-content;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
  font-size: 30rpx;
}


.red-point {
  width: 30rpx;
  height: 30rpx;

  margin-left: 10rpx;

  border-radius: 30rpx;
  background-color: #FA5151;

  display: flex;
  align-items: center;
  justify-content: center;

  color: white;
  font-size: 20rpx;
  font-weight: bolder;
}

.nickName {
  /* border: 1rpx solid black; */
  color: #0C88B5;
  margin-right: 8rpx;
}

.background {
  margin: 0;
  /* border: 1rpx solid black; */
  border-radius: 10rpx;
  box-shadow: 0 0 0rpx transparent;
  background-color: #F6F6F6;
  padding: 32rpx;
  color: #7b7b7b;
}

.title {
  color: #7B7B7B;
  font-size: 30rpx;
  margin-top: 32rpx;
  font-weight: bolder;
}

.bottom {
  width: 100%;
  height: 60rpx;

  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #ACACAC;
}


/******************************************************************
** 夜间模式
******************************************************************/
@media (prefers-color-scheme: dark) {
  page {
    background-color: black;
  }



  .topWord {
    color: #DDDDDD;
  }

  .messageBackground {
    border-bottom: 1rpx solid #7b7b7b;
  }

  .red-point {
    color: black;
  }

  .background {
    background-color: #7b7b7b;
    color: #D2D2D2;
  }

  .title {
    color: #D2D2D2;
  }

  .bottom {
    color: #ACACAC;
  }
}