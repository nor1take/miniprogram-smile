@import "./assets/iconfont.wxss";

button {
  border: none;
}

.text {
  margin: 16rpx;
  margin-left: 0;

  color: #7B7B7B;
}

button::after {
  border: none;
}

button {
  border-radius: 40rpx;
  padding: 16rpx;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: max-content;
  font-size: 14px;
}

/* 1 开关 */
.switch {
  height: fit-content;

  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 2 标签 */
.tagsArea {
  height: fit-content;
  border-bottom: 1rpx solid #DDDDDD;
}

.title {
  padding-top: 32rpx;
  padding-bottom: 32rpx;
  height: 100%;
  width: 100%;

  border-bottom: 1rpx solid #DDDDDD;
  font-size: 34rpx;
  font-weight: bold;
}

page>view {
  max-width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.5;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  /* 惯性滚动 */
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  width: 100%;
  position: fixed;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: white;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

@media (prefers-color-scheme: dark) {
  .toolbar {
    background-color: black;
  }

  .text {
    color: #7B7B7B;
  }
}