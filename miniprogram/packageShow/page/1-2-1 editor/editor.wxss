@import "./assets/iconfont.wxss";

button {
  border: none;
}

button::after {
  border: none;
}

button {
  border-radius: 40rpx;
  padding: 16rpx;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: max-content;
  font-size: 14px;
}

page {
  background-color: white;
}

/* 1 开关 */
.switch {
  height: fit-content;

  margin: 32rpx;
  margin-bottom: 0;

  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
}

/* 2 标签 */
.tagsArea {
  height: fit-content;
  padding: 32rpx;
  padding-top: 0;
  border-bottom: 1rpx solid #DDDDDD;
}

.text {
  margin: 16rpx;
}


.title {
  box-sizing: content-box;
  height: 100%;
  width: 85%;

  padding: 32rpx;
  padding-left: 0;

  font-size: 34rpx;
  font-weight: bold;
}

page>view {
  max-width: 100%;

}

.container {
  width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding-top: 32rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;

  -webkit-overflow-scrolling: touch;
  /* 惯性滚动 */
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  background-color: white;
  box-sizing: border-box;
  padding: 0 10px;
  height: 50px;
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: space-between;

  border-left: none;
  border-right: none;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);
}

@media (prefers-color-scheme: dark) {
  page {
    background-color: black;
  }

  .toolbar {
    background-color: black;
  }
}