@import "../../../assets/iconfont.wxss";

.title {
  font-size: 36rpx;
}

.body {
  font-size: 32rpx;
}

.last {
  margin: 32rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.disable {
  color: #000000;
}

.able {
  color: white;
}

.gptBG {
  position: fixed;

  left: 32rpx;
  right: 32rpx;
  height: fit-content;
  background-color: #3485FF;
  padding: 32rpx;
  box-shadow: 0 0 10rpx #acacac;

  display: flex;
  flex-direction: row;
  align-items: center;
}

.tabs {
  width: 100%;
  height: fit-content;
  white-space: nowrap;
  /* backdrop-filter: blur(5px); */
  /* border: 1rpx solid black; */
}

.swiperContainer {
  margin: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.hotQcontainer {
  padding: 16rpx;
  background-size: cover;
  border-radius: 20rpx;
}

.hotLabel {

  font-size: 32rpx;
  font-weight: bold;
  margin: 32rpx;
  font-size: larger;
}

.hotQ {
  margin: 16rpx;
  border-radius: 15rpx;
  padding: 32rpx;

  box-shadow: none;

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;

  background: rgba(250, 250, 250, 0.6);
  backdrop-filter: blur(8px);
}

.hotTitle {
  margin: 32rpx;
  font-size: 32rpx;
  margin-right: 0;
}

.gptInput {
  color: white;
  padding: 32rpx;
}

.gptComment {
  padding: 32rpx;
  background-color: #F3F3F3;
  border-radius: 25rpx;
  display: flex;
  flex-direction: column;
}

.commentBody {
  /* border: 1rpx solid black; */
  width: fit-content;

  display: flex;
  font-size: 30rpx;
  padding: 16rpx;

  line-height: 1.75;
}

@media (prefers-color-scheme: dark) {
  .gptBG {
    box-shadow: 0 0 10rpx #3d3d3d;
  }

  .gptComment{
    background-color: #3d3d3d;
  }
}