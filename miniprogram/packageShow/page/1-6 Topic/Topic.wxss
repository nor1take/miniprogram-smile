button {
  border: none;
}

button::after {
  border: none;
}

button {
  border-radius: 16rpx;
  padding: 16rpx;
  margin: 0;
  margin-left: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: max-content;
  font-size: 14px;
}

.avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 32rpx;
}

.container {
  width: 100%;
  height: 100%;
  position: absolute;
}

.imgBkg {
  width: 100%;
  height: 300rpx;
  position: fixed;
  z-index: -1;
  top: 0
}

.cover {
  width: 100%;
  height: 300rpx;

  z-index: -1;

  background: linear-gradient(to top, rgba(61, 61, 61, 1), rgba(61, 61, 61, 0));
}

.stickyBlock {
  width: 100%;
  position: fixed;
  top: 0;
  background-color: #3d3d3d;
}

.topicTop {
  z-index: -1;
  /* border: 1rpx solid red; */
  width: 100%;
  height: 300rpx;
  top: 0
}

.tagName {
  display: flex;
  align-items: center;
  min-height: 32px;
  background-color: #3d3d3d;
  padding: 16px;
  padding-top: 0;
  padding-bottom: 0;
  font-size: 22px;
  font-weight: bolder;
  color: white;
}

.topicBottom {
  /* border: 1rpx solid red; */
  background-color: #f2f2f2;
  width: 100%;
  height: fit-content;
  padding-top: 16rpx;
}

@media (prefers-color-scheme: dark) {
  .cover {
    background: linear-gradient(to top, rgba(172, 172, 172, 1), rgba(172, 172, 172, 0));
  }

  .stickyBlock {
    background-color: #acacac;
  }

  .tagName {
    background-color: #acacac;
  }

  .topicBottom {
    /* border: 1rpx solid red; */
    background-color: #3d3d3d;
  }
}