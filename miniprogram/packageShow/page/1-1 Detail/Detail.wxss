/* 1 问题 */
.word {
  width: 100%;
  height: fit-content;
  /* border: 1rpx solid black; */
}

.top {
  width: 100%;
  /* border: 1rpx solid black; */
  margin-top: 32rpx;
  display: flex;
  justify-content: space-between;
}

.tag {
  margin-bottom: 0;
  margin-top: 0;

  font-size: 30rpx;
  font-weight: 500;
}

.title {
  font-size: 38rpx;
  font-weight: bold;
  margin: 32rpx;
}

.body {

  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: #3d3d3d;
}

.middle {
  /* border: 1rpx solid black; */
  display: flex;

  align-items: center;
  margin: 32rpx;
}

.last {
  /* border: 1rpx solid black; */
  align-items: center;
}

/* 2 关注/回应按钮 */
.FollowReplybutton-area {
  display: flex;
  align-items: center;
  justify-content: center;
}

.FollowReplybutton {
  /* font-weight: 100; */
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 32rpx;
}

/* 3 评论 */
.commentBackground {
  height: fit-content;

  margin: 16rpx;
  border: 1rpx solid #F3F3F3;
  border-radius: 25rpx;
  background-color: #F3F3F3;
}

.userInfo {
  margin: 16rpx;
  display: flex;
}

.nickName {
  margin: 8rpx;

  font-size: 28rpx;
  color: #7B7B7B;
}

.commentBodyContainer {
  padding: 16rpx;
  padding-top: 8rpx;
  padding-left: 84rpx;
}

.commentBody {
  /* border: 1rpx solid black; */
  display: flex;
  font-size: 30rpx;
  color: black;
  padding-right: 16rpx;
}

.first {
  overflow-wrap: break-word;
  font-size: 28rpx;
}

.second {
  font-size: 28rpx;
  margin-left: 63rpx;
  margin-top: 16rpx;
  /* border: 1rpx solid black; */
}

.commentLast {
  /* border: 1rpx solid black; */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.commentTime {
  /* border: 1rpx solid black; */
  margin-left: 84rpx;

  font-size: 24rpx;
  color: #ACACAC;
}

/* 4 点赞/评论按钮 */
.LikeCommentbutton-area {
  height: 46rpx;

  margin: 16rpx;

  border-radius: 10rpx;

  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.LikeCommentImage {
  height: 37rpx;
  width: 37rpx;

  margin: 8rpx;
}

.buttonLike {
  margin-right: 24rpx;

  display: flex;
  align-items: center;
  justify-content: space-between;

  font-size: 24rpx;
  color: #D8D8D8;
}

.buttonComment {
  margin-right: 16rpx;

  display: flex;
  align-items: center;
  justify-content: space-between;

  font-size: 24rpx;
  color: #D8D8D8;
}

/* 4-2 评论的评论 */
.commentAgainBackground {
  margin: 16rpx;
  border-left: 8rpx solid #ACACAC;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  background-color: #F3F3F3;
  padding: 16rpx;
}

.commentAgainnickName {
  align-items: center;
  justify-content: center;
  color: #0C88B5;
}

.commentAgainBody {
}

/* 5 底部评论输入 */
.imageShow {
  /* width: fit-content;
  height: fit-content; */

  /* border: 1rpx solid black; */
  border-radius: 10rpx;
  background-color: white;
  position: fixed;

  display: flex;
  flex-wrap: wrap;
  margin:0 auto;
  
  padding: 16rpx;
  padding-left: 0;

  z-index: 2;
}

.imageArea {
  /* border: 1rpx solid black; */
  width: fit-content;
  height: fit-content;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 16rpx;
  margin-right: 0;
}

.bottomInput-Container {
  width: 100%;
  height: fit-content;

  position: fixed;

  border-top: 1rpx solid #ECECEC;
  background-color: white;

  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bottomInput {
  height: 100%;
  width: 100%;
  margin: 16rpx;

  border-radius: 30rpx;
  background-color: #F3F3F3;

  padding: 16rpx;
}
button{
  border:none;
}
button::after {
  border:none;
}
button {
  border-radius: 25rpx; 
  padding: 16rpx; 
  margin: 0; 
  display: flex; 
  align-items: center; 
  justify-content: center; 
  width: max-content; 
  font-size: 14px;
}

.sendButton {
  /* border: 1rpx solid black; */
  margin: 16rpx;
  margin-left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.sort{
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding-right: 16rpx;

  color:#0C88B5;
  font-size: 26rpx;
}
.hoverClass {
  background-color: #DDDDDD;
}

/******************************************************************
** 夜间模式
******************************************************************/
@media (prefers-color-scheme: dark) {
  .body {
    color: #dddddd;
  }
  /* 3 评论 */
  .commentBackground {
    border: 1rpx solid #3d3d3d;
    background-color: #3d3d3d;
  }
  .nickName {
    color: #7B7B7B;
  }

  .commentBody {
    color: #DDDDDD;
  }
  .commentTime {
    color: #ACACAC;
  }

  /* 4-2 评论的评论 */
  .commentAgainBackground {
    background-color: #3d3d3d;
  }

  /* 5 底部评论输入 */
  .imageShow {
    background-color: black;
  }

  .bottomInput-Container {
    border-top: 1rpx solid #3d3d3d;
    background-color: black;
  }

  .bottomInput {
    background-color: #3d3d3d;
  }

  .hoverClass{
    background-color: #7b7b7b;
    box-shadow:0 0 0rpx black;
  }
}