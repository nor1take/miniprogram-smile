.mainContent {
  display: flex;
}



@keyframes heartBeat {
  0% {
    transform: scale(1);
  }

  14% {
    transform: scale(0.5);
  }

  28% {
    transform: scale(1.3);
  }

  42% {
    transform: scale(0.9);
  }

  56% {
    transform: scale(1.1);
  }

  70% {
    transform: scale(1);
  }
}

.hoverClass {
  border-top-right-radius: 8rpx;
  border-bottom-right-radius: 8rpx;
}



.heartBeat {
  animation-name: heartBeat;
  animation-duration: 1.3s;
  animation-timing-function: ease-in-out;
}

.tagText {
  font-size: 30rpx;
}

/* 1 问题 */


.top {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
}

.body {
  word-break: break-all;
  display: flex;
  align-items: center;
  font-size: 34rpx;
  color: #3d3d3d;

  line-height: 1.75;
}

.middle {
  /* border: 1rpx solid red; */
  display: flex;
  align-items: center;
  margin-top: 32rpx;
  margin-bottom: 32rpx;
}

.last {
  display: flex;
  align-items: center;
  margin: 0;
}

.lastArea {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 2 关注/回应按钮 */
.FollowReplybutton-area {
  margin-top: 32rpx;
  margin-bottom: 32rpx;
  font-size: small;
  display: flex;
  align-items: center;
}

.button-area {
  color: #ACACAC;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 3 评论 */
.commentBackground {
  padding: 16rpx;
  margin-top: 16rpx;
  height: fit-content;
  border-radius: 14rpx;
  background-color: #F3F3F3;
}

.commentTop {
  /* border: 1rpx solid red; */
  height: 60rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.userInfo {
  /* border: 1rpx solid red; */
  display: flex;
  align-items: center;
}

.nickName {
  font-size: 28rpx;
  color: #7B7B7B;
}

.commentBodyContainer {
  /* border: 1rpx solid blue; */
  padding: 16rpx;
  padding-left: 0;
  padding-right: 0;
}

.commentBody {
  /* border: 1rpx solid black; */
  word-break: break-all;
  width: fit-content;

  display: flex;
  font-size: 30rpx;
  color: black;

  line-height: 1.75;
}


.first {
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
}

.second {
  padding: 16rpx;
  padding-left: 0;
  padding-right: 0;
  font-size: 28rpx;
  line-height: 1.5;
  word-wrap: break-word;
  /* border: 1rpx solid black; */
}

.commentLast {
  /* border: 1rpx solid black; */
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.commentTime {
  /* border: 1rpx solid black; */

  font-size: 24rpx;
  color: #ACACAC;
}

/* 4 点赞/评论按钮 */
.LikeCommentbutton-area {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}



.buttonLike {
  margin-right: 24rpx;

  display: flex;
  align-items: center;
  justify-content: space-between;

  font-size: 24rpx;
  color: #D8D8D8;
}

.buttonComment {
  margin-right: 16rpx;

  display: flex;
  align-items: center;
  justify-content: space-between;

  font-size: 24rpx;
  color: #D8D8D8;
}

/* 4-2 评论的评论 */
.commentAgainBackground {
  margin: 8rpx;
  margin-right: 0;
  padding-bottom: 0;
  padding-left: 32rpx;
  display: flex;
  border-left: 8rpx solid #dddddd;
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  background-color: #F3F3F3;
}

.commentAgainnickName {
  align-items: center;
  justify-content: center;
  color: #0C88B5;
}

/* 5 底部评论输入 */
.imageShow {
  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;
}

.imageArea {
  /* border: 1rpx solid black; */
  width: fit-content;
  height: fit-content;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 16rpx;
  margin-right: 0;
}

.bottomInput-Container {
  position: fixed;
  left: 0;
  right: 0;
  height: fit-content;
  padding-bottom: constant(safe-area-inset-bottom);
  padding-bottom: env(safe-area-inset-bottom);

  border-top: 1rpx solid #ECECEC;
  background-color: white;
}

.bottomInput {
  height: 100%;
  width: 100%;
  margin: 16rpx;

  border-radius: 25rpx;
  background-color: #F3F3F3;

  padding: 32rpx;
  padding-top: 16rpx;
  padding-bottom: 16rpx;

}

button {
  border: none;
}

button::after {
  border: none;
}

button {
  border-radius: 25rpx;
  padding: 16rpx;
  margin: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: max-content;
  font-size: 14px;
}

.sendButton {
  /* border: 1rpx solid black; */
  margin: 16rpx;
  margin-left: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.sort {
  display: flex;
  align-items: center;
  justify-content: flex-end;

  color: #0C88B5;
  font-size: 26rpx;
}

.sort2 {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  margin-left: 68rpx;
  padding: 16rpx;

  color: #0C88B5;
  font-size: 26rpx;
  font-weight: bold;
}

.hoverClass {
  background-color: #DDDDDD;
}


.aibkg {
  margin: 0;
  border: 0 solid transparent;
  background-color: transparent;
  box-shadow: 0 0 0 transparent;
  border-radius: 0;
}

.ask {
  padding: 32rpx;
  background-color: white;
}

.answer {
  padding: 32rpx;
  background-color: #f7f7f7;
}

.icon-a-ic_public_save1 {
  color: #dddddd;
}


/******************************************************************
** 夜间模式
******************************************************************/
@media (prefers-color-scheme: dark) {
  .body {
    color: #dddddd;
  }

  /* 3 评论 */
  .commentBackground {
    border: 1rpx solid #3d3d3d;
    background-color: #3d3d3d;
  }

  .nickName {
    color: #7B7B7B;
  }

  .icon-a-ic_public_save1 {
    color: #7B7B7B;
  }

  .commentBody {
    color: #DDDDDD;
  }

  .commentTime {
    color: #ACACAC;
  }

  /* 4-2 评论的评论 */
  .commentAgainBackground {
    background-color: #3d3d3d;
    border-left: 8rpx solid #7B7B7B;
  }

  .bottomInput-Container {
    border-top: 1rpx solid #3d3d3d;
    background-color: black;
  }

  .bottomInput {
    background-color: #3d3d3d;
  }

  .hoverClass {
    background-color: #7b7b7b;
    box-shadow: 0 0 0rpx black;
  }

  .ask {
    background-color: #343541;
  }

  .answer {
    background-color: #444654;
  }

  .aibkg {
    border: 0 solid transparent;
  }

}