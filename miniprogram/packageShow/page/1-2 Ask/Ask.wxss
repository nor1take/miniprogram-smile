/*1 标题 */
.titleContainer{
  width: 100%;
  height: fit-content;

  display: flex;
  align-items: center;
  justify-content: center;
}
.title{
  height: 100%;
  width: 100%;

  margin: 32rpx;

  border-bottom: 1rpx solid #DDDDDD;

  padding: 32rpx;
  padding-left: 0;

  font-size: 34rpx;
  font-weight:bold;
}
/*2 补充 */
.bodyContainer{
  width: 100%;
  height: 300rpx;

  display: flex;
  align-items: center;
  justify-content: center;
}
.body{
  height: 100%;
  width: 100%;

  margin: 32rpx;

  padding: 32rpx;
  padding-left: 0;

  font-size: 32rpx;
  color: black;
}
/* 3 上传 */
.imageUpload-area{
  height: fit-content;
  width: 100%;
  display: flex; 
  justify-content: flex-start; 
  align-items: center;

}
.upload{
  width: 215rpx;
  height: 200rpx;

  margin-right: 32rpx;
  margin-left: 32rpx;
  background-color: #DDDDDD;
  
  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 15rpx;

  font-size: 150rpx;
  font-weight: lighter;
  color: white;
}
.tip{
  margin: 32rpx;
  margin-top: 8rpx; margin-bottom: 8rpx;
  font-size: 24rpx;
  color: #DDDDDD;
}
/* 4 标签 */
.tagsArea{
  height: fit-content;

  margin: 32rpx;
  margin-top: 0;
  border-top: 1rpx solid #DDDDDD;
}
.text{
  margin: 16rpx;

  color: #7B7B7B;
}
.tags{
  margin: 32rpx;
  margin-top: 8rpx;margin-bottom: 8rpx;

  display: flex;

  font-size: 34rpx;
}
.item{
  margin: 8rpx;

  border: 1rpx solid #DDDDDD;
  border-radius: 30rpx;
  background-color: white;

  display: flex;
  align-items: center;
  padding: 32rpx;
  padding-top: 8rpx;  padding-bottom: 8rpx;

  font-size: 30rpx;
  color: #ACACAC;
}
.diy{
  color: #ACACAC;
}
input{
  color: black;
}
/* 5 开关 */
.switch{
  height: fit-content;

  margin: 32rpx;

  border-top: 1rpx solid #DDDDDD;

  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
}
.switchContent{
  color: #7B7B7B;
}
/* 6 发布按钮 */
.btn-area{
  margin-top: 64rpx;

  display: flex;
  align-content: center;
  justify-content: center;
}





