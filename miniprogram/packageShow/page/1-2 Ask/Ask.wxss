/*1 标题 */
page {
  background-color: white;
}

.titleContainer {
  width: 100%;
  height: fit-content;

  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  height: 100%;
  width: 100%;

  margin: 32rpx;

  border-bottom: 1rpx solid #DDDDDD;

  padding: 32rpx;
  padding-left: 0;

  font-size: 34rpx;
  font-weight: bold;
}

/*2 补充 */
.bodyContainer {
  width: 100%;
  height: 300rpx;

  display: flex;
  align-items: center;
  justify-content: center;
}

.body {
  height: 100%;
  width: 100%;

  margin: 32rpx;

  padding: 32rpx;
  padding-left: 0;

  font-size: 32rpx;
  color: black;
}

/* 3 上传 */
.imageUpload-area {
  height: fit-content;
  width: 100%;

  display: flex;
  flex-wrap: wrap;
  margin: 0 auto;

}

.upload {
  width: 215rpx;
  height: 200rpx;

  margin-right: 32rpx;
  margin-left: 32rpx;
  margin-top: 8rpx;
  background-color: #DDDDDD;

  display: flex;
  align-items: center;
  justify-content: center;
  padding-bottom: 15rpx;

  font-size: 150rpx;
  font-weight: lighter;
  color: white;
}

.tip {
  margin: 32rpx;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
  font-size: 24rpx;
  color: #DDDDDD;
}

/* 4 标签 */
.tagsArea {
  height: fit-content;

  margin: 32rpx;
  margin-top: 0;
  border-top: 1rpx solid #DDDDDD;
}

.text {
  margin: 16rpx;

  color: #7B7B7B;
}

.diy {
  color: #ACACAC;
}

input {
  color: black;
}

/* 5 开关 */
.switch {
  height: fit-content;

  margin: 32rpx;

  border-top: 1rpx solid #DDDDDD;

  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
}

.switchContent {
  color: #7B7B7B;
}

/* 6 发布按钮 */
.btn-area {

  margin-top: 64rpx;

  display: flex;
  align-items: center;
  justify-content: center;
}

button {
  border: none;
}

button::after {
  border: none;
}

button {
  border-radius: 40rpx;

  display: flex;
  align-items: center;
  justify-content: center;
  width: max-content;

  font-size: 32rpx;
  padding-left: 128rpx;
  padding-right: 128rpx;
}

/******************************************************************
** 夜间模式
******************************************************************/
@media (prefers-color-scheme: dark) {
  page {
    background-color: black;
  }

  .title {
    border-bottom: 1rpx solid #7b7b7b;
  }

  /*2 补充 */
  .body {
    color: #d2d2d2;
  }

  /* 3 上传 */

  .upload {
    background-color: #7B7B7B;
    color: #acacac;
  }

  .tip {
    color: #acacac;
  }

  /* 4 标签 */
  .tagsArea {
    border-top: 1rpx solid #7b7b7b;
  }

  .text {
    color: #7B7B7B;
  }

  .item {
    background-color: black;

    color: #ACACAC;
  }

  .selectedItem {
    background-color: #3d3d3d;
    border: 3rpx solid white;
    color: #DDDDDD;
    font-weight: bold;
  }

  .diy {
    color: #ACACAC;
  }

  input {
    color: #DDDDDD;
  }

  /* 5 开关 */
  .switch {
    border-top: 1rpx solid #7b7b7b;
  }

  .switchContent {
    color: #d2d2d2;
  }
}