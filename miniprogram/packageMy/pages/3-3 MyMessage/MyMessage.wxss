.red-point-container{
  width: 100%;
  height: 34rpx;
  border: 1rpx solid black;
  position: fixed;
  display: flex;
  align-items: center;
  justify-content: space-around;
}
.red-point-box{
  width: 30%;
  border: 1rpx solid black;
  display: flex;
  align-items: center;
  justify-content:flex-end
}
.messageBackground{
  border-bottom: 1rpx solid #DDDDDD;
  /* border-bottom: 1rpx solid #DDDDDD; */
  margin: 16rpx;

}
.top{
  /* border: 1rpx solid black; */
  height: fit-content;
  display: flex;
  flex-wrap: wrap;
  
  margin: 32rpx;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
}

.showTime{
  /* border: 1rpx solid black; */
  margin: 32rpx;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
}
.red-point{
  width: 30rpx;
  height: 30rpx;

  margin-left: 10rpx;

  border-radius: 30rpx;
  background-color: #FA5151;

  display: flex;
  align-items: center;
  justify-content: center;

  color:white;
  font-size: 20rpx;
  font-weight: bolder;
}
.nickName{
  /* border: 1rpx solid black; */
  color: #0C88B5;
  margin-right: 8rpx;
}
.background{
  border: 1rpx solid transparent;
  border-radius: 10rpx;
  box-shadow:0 0 0rpx transparent;
  background-color: #F6F6F6;
}
.title{
  color: #7B7B7B;
  font-size: 30rpx;
  margin: 32rpx;
  margin-top: 16rpx;
}
