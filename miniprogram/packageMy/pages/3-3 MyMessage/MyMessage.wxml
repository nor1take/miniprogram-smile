<block wx:if="{{tabs[0].Active}}">
  <block wx:for="{{questionList}}" wx:key="id">
    <view class="messageBackground" bindtap="gotoDetail" id="{{item._id}}">
      <view class="showTime">
        <showTime year="{{year}}" dbyear="{{item.Ayear}}" month="{{month}}" dbmonth="{{item.Amonth}}" day="{{day}}" dbday="{{item.Aday}}" h="{{h}}" dbh="{{item.Ah}}" m="{{m}}" dbm="{{item.Am}}" s="{{s}}" dbs="{{item.As}}"></showTime>
        <text class="red-point" wx:if="{{item.message}}">{{item.message}}</text>
      </view>
      <view class="top">
        <block wx:if="{{item.commenter[2]}}">
          <view class="nickName">@{{item.commenter[0]}} @{{item.commenter[1]}}</view>
          <view>等回应了你的问题</view>
        </block>
        <block wx:elif="{{item.commenter[1]}}">
          <view class="nickName">@{{item.commenter[0]}} @{{item.commenter[1]}}</view>
          <view>回应了你的问题</view>
        </block>
        <block wx:else>
          <view class="nickName">@{{item.commenter[0]}}</view>
          <view>回应了你的问题</view>
        </block>

      </view>

      <view class="background">
        <view class="title">{{item.title}}</view>
        <view class="last">
          <text class="watched">{{item.commentNum}} 回应</text> ·
          <text class="watched">{{item.watched}} 浏览</text> ·
          <text class="watched">{{item.collectNum}} 关注</text>
        </view>
      </view>
    </view>
  </block>
</block>

<block wx:else="{{tabs[1].Active}}">
  <block wx:for="{{commentList}}" wx:key="id">
    <view class="messageBackground" bindtap="gotoDetail2" id="{{item.questionId}}" data-commentId="{{item._id}}">
      <view class="showTime">
        <showTime year="{{year}}" dbyear="{{item.Ayear}}" month="{{month}}" dbmonth="{{item.Amonth}}" day="{{day}}" dbday="{{item.Aday}}" h="{{h}}" dbh="{{item.Ah}}" m="{{m}}" dbm="{{item.Am}}" s="{{s}}" dbs="{{item.As}}"></showTime>
        <text class="red-point" wx:if="{{!item.isWatched}}">1</text>
      </view>
      <view class="top">
        <view class="nickName">@{{item.newNickName}}</view>
        <view>回应了你的评论：</view>
      </view>
      <view class="title">{{item.commentAgainBody}}</view>

    </view>
  </block>
</block>