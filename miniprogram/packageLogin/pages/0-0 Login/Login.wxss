.topWordContanier {
  position: fixed;
  width: 100%;
  height: 40%;
  /* border: 1rpx solid black; */
  display: flex;
  align-items: center;
  justify-content: center;
}

.topWord {
  font-size: 60rpx;
  font-weight: bold;
  color: #3d3d3d;
}

.wholePage {
  position: fixed;
  width: 100%;
  height: 60%;

  top: 40%;

  display: flex;
  align-items: center;
  justify-content: center;

  flex-direction: column;
}

.avatar-wrapper {
  padding: 0;
  width: 112rpx !important;
  border-radius: 16rpx;
}

.avatar {
  display: block;
  width: 112rpx;
  height: 112rpx;
  border-radius: 16rpx;
}

input {
  background-color: white;
  padding: 20rpx;
  height: fit-content;
  margin: 40rpx;
  border-radius: 16rpx;
}

button {
  width: fit-content;
  font-size: 32rpx;
  padding-left: 128rpx;
  padding-right: 128rpx;
  color: #3d3d3d;
}

/******************************************************************
** 夜间模式
******************************************************************/
@media (prefers-color-scheme: dark) {
  .topWord {
    color: #dddddd;
  }

  input {
    background-color: black;
    color: white;
  }

  button {
    color: #acacac;
  }
}