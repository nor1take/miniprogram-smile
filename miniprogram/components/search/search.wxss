@import "../../assets/iconfont.wxss";

.topBlock {
  background-color: white;
  /* box-shadow: 0 0 10rpx #d2d2d2; */
}

.container {
  /* border: 1rpx solid black; */
  height: 30px;
  display: flex;
  align-items: center;
}

.searchInput {
  width: 100%;
  height: 30px;
  /* border: 5rpx solid #7b7b7b; */
  margin-left: 32rpx;
  margin-right: 32rpx;
  border-radius: 40rpx;
  background-color: #dddddd;
  /* padding-left: 30rpx; padding-right: 30rpx; */
  /*   
  font-size: 34rpx;
  color: white; */
}

.point {
  width: 15px;
  height: 15px;

  border-radius: 30rpx;

  display: flex;
  align-items: center;
  justify-content: center;

  color: white;
  font-size: 10px;
  font-weight: bolder;
}

.Menucontainer {
  padding-left: 32rpx;
}

.coverMenu {
  height: 100%;
  position: fixed;
  z-index: 4;


  border-top-right-radius: 40rpx;
  /* border-bottom-right-radius: 50rpx; */
  background-color: #f3f3f3;
}

.coverBackground {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 3;
  background-color: black;
  opacity: 0;
  overflow: visible;
  pointer-events: none;
}

.coverRight {
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 3;
  right: 0;
  /* background-color: beige; */
}

.userInfo {
  margin: 64rpx;
  margin-bottom: 0;
  /* border: 1rpx solid black; */
  align-items: center;
  justify-content: left;

  padding-bottom: 64rpx;
  border-bottom: 1rpx solid #dddddd;
}

.image {
  border: 1rpx solid #dddddd;
  padding: 1px;
  border-radius: 40px;
  margin: 32rpx;
  margin-left: 0;
  margin-top: 0;
}

.nickname {
  font-weight: bold;
  font-size: 17px;
  color: #181818;
}

.authentic {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
  color: #07C160;
  font-size: 12px;
}

.follow {
  margin-top: 32rpx;
  font-size: 14px;
  color: #acacac;
}

.buttonArea {
  height: fit-content;
  /* border: 1rpx solid black; */
}

.button {
  /* border: 1rpx solid black; */
  padding: 32rpx;
  padding-left: 64rpx;
  display: flex;
  align-items: center;
  font-size: 16px;
}

.feedback_button {

  width: 100%;
  display: flex;
  justify-content: flex-start;
}

button {
  border: none;
}

button::after {
  border: none;
}

.feedbackButton {
  padding: 0;
  width: 100%;
  margin-left: 0;

  /* border: 1rpx solid #f3f3f3;  */
  background-color: #f3f3f3;
  display: flex;
  align-items: center;

  font-size: 16px;
  font-weight: normal;
}

.hoverClass {
  background-color: #dddddd;
}

.version {
  font-weight: lighter;
  font-size: smaller;
  color: #acacac;
  margin: 64rpx;
}

@media (prefers-color-scheme: dark) {
  .topBlock {
    background-color: black;
    box-shadow: 0 0 10rpx black;
  }

  .searchInput {
    background-color: #3d3d3d;
  }

  .coverMenu {
    background-color: #3d3d3d;
  }

  .coverBackground {
    background-color: black;
  }

  .nickname {
    color: white;
  }

  .feedbackButton {
    background-color: #3d3d3d;
  }

  .hoverClass {
    background-color: black;
  }

  .version {
    color: #7b7b7b;
  }
}