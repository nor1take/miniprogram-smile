.topBlock{
  background-color: white;
  box-shadow:0 0 10rpx #d2d2d2;
}
.tabs{
  margin-left: 16px;
  background-color: white;
  white-space: nowrap;
  /* backdrop-filter: blur(5px); */
  /* border: 1rpx solid black; */
}
.tabsContent{
  border-bottom: 2px solid transparent;
  padding: 8px;
  padding-bottom: 5px;
  display: inline-block;
  align-items: center;
  justify-content: center;
  /* border: 1rpx solid black; */
  font-size: 15px;
  color: #3d3d3d;
}
.active{
  font-weight: bolder;
  border-bottom: 6rpx solid #181818;
  color: #181818;
}

/******************************************************************
** 夜间模式
******************************************************************/
@media (prefers-color-scheme: dark){
  .topBlock{
    background-color: black;
    box-shadow:0 0 10rpx black;
  }
  .tabs{
    background-color: black;
  }
  .tabsContent{
    color: #d2d2d2;
  }
  .active{
    font-weight: bolder;
    border-bottom: 6rpx solid #dddddd;
    color: #dddddd;
  }
}