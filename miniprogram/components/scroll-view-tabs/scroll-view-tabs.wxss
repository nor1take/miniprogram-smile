/* components/scroll-view-tabs/scroll-view-tabs.wxss *//* components/tabs/tabs.wxss */
.tabs{
  white-space: nowrap;
  position: fixed;
  width: 100%;
  top:0;
  backdrop-filter: blur(5px);
}
.tabsContent{
  display: inline-block;
  width: fit-content;
  padding: 28rpx;
  padding-bottom: 10rpx;
  font-size: 34rpx;
  justify-content: center;
  /* border: 1rpx solid black; */
  color: #3d3d3d;
}

.active{
  font-weight: bolder;
  border-bottom: 6rpx solid #3d3d3d;
}